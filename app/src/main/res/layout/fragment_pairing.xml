<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent">

    <View
            android:id="@+id/vConnectShine"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/background_connect_shine"
            android:layout_centerInParent="true"/>

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="30dp"
            android:id="@+id/ivConnect"
            android:src="@drawable/ic_bluetooth_connected_white_24dp"
            android:background="@drawable/background_connect"
            android:layout_centerInParent="true"
            tools:ignore="ContentDescription"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDesc"
            android:paddingTop="100dp"
            android:layout_below="@id/ivConnect"
            android:layout_centerHorizontal="true"/>

</RelativeLayout>